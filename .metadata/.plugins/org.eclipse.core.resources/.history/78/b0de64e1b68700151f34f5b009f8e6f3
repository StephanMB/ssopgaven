package ssOpgavenWeek1;

public class DollarsAndCentsCounter {
	// ------------------ Instance variables ----------------
	public int dollars = 0;	//this.dollars()>= 0
	public int cents = 0; //<+this.cents() && this.cents () <=99

	// ------------------ Constructor ------------------------
	public DollarsAndCentsCounter(){
		}
	// ------------------ Commands --------------------------
	public void add (int dollarsAdd, int centsAdd){
		System.out.println("dollars: " +dollars);
		System.out.println("cents: " +cents);
		System.out.println("dollarsAdd: " + dollarsAdd);
		System.out.println("centsAdd: " + centsAdd);
		int dollarCents = centsAdd / 100;
		System.out.println("dollarCents: " + dollarCents);
		int rest = centsAdd % 100;
		System.out.println("rest: " +rest);
		dollars = dollars + dollarsAdd + dollarCents;
		System.out.println("dollars: " +dollars);
		cents = cents + rest;
		System.out.println("cents: " +cents);
	}
	
	//this.dollars == 0 && this.cents ==0
	public void reset (){
		dollars = 0;
		cents = 0;
	}
	// ------------------ Queries --------------------------
	
	public int dollars (){
		return dollars;
	}
	
	public int cents (){
		return cents;
	}
	
}
